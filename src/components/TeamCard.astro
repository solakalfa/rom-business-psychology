---
interface Props {
  name: string;
  role: string;
  image: string;
  memberId: string;
}

const { name, role, image, memberId } = Astro.props;
---

<button 
  type="button" 
  data-member-id={memberId} 
  class="group relative h-full w-full cursor-pointer min-h-[400px]"
>
  <div class="relative overflow-hidden rounded-2xl shadow-xl h-full transition-all duration-300 hover:shadow-2xl hover:scale-[1.02]">
    
    <img 
      src={image} 
      alt={name} 
      class="w-full h-full object-cover"
    />
    
    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black via-black/90 to-transparent pt-16 pb-6 px-6">
      <h3 class="text-white text-lg font-bold mb-1 leading-tight">{name}</h3>
      <p class="text-cyan-400 text-sm font-semibold uppercase tracking-wider">{role}</p>
    </div>

    <div class="absolute inset-0 bg-cyan-600/0 group-hover:bg-cyan-600/10 transition-all duration-300"></div>

  </div>
</button>