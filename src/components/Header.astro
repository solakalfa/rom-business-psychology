---
// src/components/Header.astro
---

<header class="header-dark font-['Poppins']">
  <div class="header-content">
    <div class="logo-wrapper">
      <a href="/" class="logo">
        <div class="logo-rom">ROM</div>
        <div class="logo-divider"></div>
        <div class="logo-text">
          <span>BUSINESS</span>
          <span>PSYCHOLOGY</span>
        </div>
      </a>

      <button
        class="menu-btn animate-attention"
        id="menuBtn"
        aria-label="Open menu"
      >
        <div class="menu-icon" id="menuIcon">
          <div class="dot"></div>
          <div class="dot dot-small"></div>
          <div class="dot"></div>
        </div>
      </button>
    </div>
  </div>
</header>

<style>
  .header-dark {
    background: #0f172a;
    position: sticky;
    top: 0;
    z-index: 250;
    width: 100%;
    transition: background 0.4s ease;
  }

  .header-content {
    max-width: 896px;
    margin: 0 auto;
    padding: 0 24px;
    display: flex;
    align-items: center;
    height: 90px;
  }

  /* יישור הלוגו וההמבורגר יחד */
  .logo-wrapper {
    display: flex;
    align-items: center;
    gap: 32px; /* המרחק בין הלוגו לכפתור */
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 24px;
    text-decoration: none;
  }

  .logo-rom {
    font-size: 52px;
    font-weight: 900;
    line-height: 1;
    letter-spacing: -2px;
    color: white;
  }

  .logo-divider {
    width: 1px;
    height: 45px;
    background: rgba(255, 255, 255, 0.15);
  }

  .logo-text {
    display: flex;
    flex-direction: column;
    gap: 1px;
    margin-right: 8px; /* אקסטרה רווח לפני הכפתור */
  }

  .logo-text span {
    font-size: 11px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 3px;
    line-height: 1.4;
  }

  /* עיצוב כפתור ההמבורגר */
  .menu-btn {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    cursor: pointer;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  /* אנימציית תשומת לב - רטט והילה עדינה */
  @keyframes attention-pulse {
    0%,
    100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(34, 211, 238, 0);
    }
    5% {
      transform: scale(1.05) rotate(2deg);
      box-shadow: 0 0 15px 2px rgba(34, 211, 238, 0.2);
    }
    10% {
      transform: scale(1.05) rotate(-2deg);
    }
    15% {
      transform: scale(1.05) rotate(0deg);
    }
    20% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(34, 211, 238, 0);
    }
  }

  .animate-attention {
    animation: attention-pulse 6s infinite;
  }

  .menu-btn:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(34, 211, 238, 0.4);
    transform: translateY(-2px);
    animation: none; /* מפסיק לרטוט כשנוגעים בו */
  }

  .menu-icon {
    position: relative;
    width: 20px;
    height: 20px;
  }

  .dot {
    position: absolute;
    width: 5px;
    height: 5px;
    background: white;
    border-radius: 50%;
    transition: all 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6);
  }

  .dot-small {
    width: 3.5px;
    height: 3.5px;
    background: #22d3ee; /* נקודה קטנה בצבע המותג למשיכת עין */
  }

  .dot:nth-child(1) {
    top: 0;
    left: 0;
  }
  .dot:nth-child(2) {
    top: 50%;
    right: 0;
    transform: translateY(-50%);
  }
  .dot:nth-child(3) {
    bottom: 0;
    left: 0;
  }

  /* אנימציה לפתיחה */
  .menu-icon.open .dot {
    width: 18px;
    height: 2px;
    border-radius: 2px;
    background: white;
  }
  .menu-icon.open .dot:nth-child(1) {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
  }
  .menu-icon.open .dot:nth-child(2) {
    opacity: 0;
  }
  .menu-icon.open .dot:nth-child(3) {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(-45deg);
  }
</style>

<script>
  const menuBtn = document.getElementById("menuBtn");
  const menuIcon = document.getElementById("menuIcon");

  if (menuBtn && menuIcon) {
    menuBtn.addEventListener("click", () => {
      window.dispatchEvent(new CustomEvent("toggleMenu"));
    });

    window.addEventListener("menuStateChanged", ((e: CustomEvent) => {
      menuIcon.classList.toggle("open", e.detail.isOpen);
      // מפסיק את האנימציה כשהתפריט פתוח
      if (e.detail.isOpen) {
        menuBtn.classList.remove("animate-attention");
      } else {
        menuBtn.classList.add("animate-attention");
      }
    }) as EventListener);
  }
</script>
