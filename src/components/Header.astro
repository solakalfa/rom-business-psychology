---
// src/components/Header.astro
---

<header class="header-dark font-['Poppins']">
  <div class="header-content">
    <div class="logo-wrapper">
      <a href="/" class="logo">
        <div class="logo-rom">ROM<span class="text-cyan-400">.</span></div>
        <div class="logo-divider"></div>
        <div class="logo-text">
          <span>BUSINESS</span>
          <span>PSYCHOLOGY</span>
        </div>
      </a>

      <button
        class="menu-btn animate-attention"
        id="menuBtn"
        aria-label="Open menu"
      >
        <div class="nav-icon" id="menuIcon">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </button>
    </div>
  </div>
</header>

<style>
.header-dark {
  background: #0f172a;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 500; 
  width: 100%;
  transition: background 0.4s ease;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.header-content {
  max-width: 896px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  align-items: center;
  height: 90px;
  position: relative;
  z-index: 501;
}

.logo-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: space-between; 
}

@media (min-width: 768px) {
  .logo-wrapper {
    justify-content: flex-start; 
    gap: 32px; 
  }
}

.logo {
  display: flex;
  align-items: center;
  gap: 16px;
  text-decoration: none;
  position: relative;
  z-index: 502;
}

.logo-rom {
  font-size: clamp(38px, 9vw, 52px); 
  font-weight: 900;
  line-height: 1;
  letter-spacing: -2px;
  color: white;
}

.logo-text {
  display: flex;
  flex-direction: column;
  gap: 0px; 
}

.logo-text span {
  font-size: clamp(12px, 2.8vw, 15px);
  font-weight: 400; 
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 2px;
  line-height: 1.2;
}

.logo-divider {
  width: 1px;
  height: 48px;
  background: rgba(255, 255, 255, 0.15);
}

.text-cyan-400 { color: #22d3ee; }

/* Glow Reveal Animation */
.logo-rom {
  opacity: 0;
}
.logo-rom.glow-active {
  animation: glowText 1s ease 0.1s forwards;
}
.logo .logo-rom .text-cyan-400 {
  opacity: 0;
}
.logo-rom.glow-active .text-cyan-400 {
  animation: cyanPulse 0.8s ease 0.5s forwards;
}
.logo .logo-divider {
  opacity: 0;
}
.logo-divider.glow-active {
  animation: dividerGlow 0.6s ease 0.6s forwards;
}
.logo-text span {
  opacity: 0;
}
.logo-text.glow-active span:first-child {
  animation: fadeInText 0.5s ease 0.75s forwards;
}
.logo-text.glow-active span:last-child {
  animation: fadeInText 0.5s ease 0.9s forwards;
}

@keyframes glowText {
  0% { opacity: 0; text-shadow: 0 0 0 transparent; }
  40% { opacity: 1; text-shadow: 0 0 30px rgba(34, 211, 238, 0.5), 0 0 60px rgba(34, 211, 238, 0.2); }
  100% { opacity: 1; text-shadow: none; }
}
@keyframes cyanPulse {
  0% { opacity: 0; text-shadow: 0 0 0 transparent; }
  50% { opacity: 1; text-shadow: 0 0 20px #22d3ee, 0 0 40px #22d3ee; }
  100% { opacity: 1; text-shadow: 0 0 8px rgba(34, 211, 238, 0.3); }
}
@keyframes dividerGlow {
  0% { opacity: 0; box-shadow: 0 0 0 transparent; }
  50% { opacity: 1; box-shadow: 0 0 12px rgba(34, 211, 238, 0.4); background: #22d3ee; }
  100% { opacity: 1; box-shadow: none; background: rgba(255, 255, 255, 0.15); }
}
@keyframes fadeInText {
  to { opacity: 1; }
}

.menu-btn {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  cursor: pointer;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  flex-shrink: 0;
  position: relative;
  z-index: 505;
}

.nav-icon {
  width: 26px;
  height: 18px;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.nav-icon span {
  display: block;
  height: 2px;
  border-radius: 2px;
  background-color: white; 
  transition: all 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6);
}

.nav-icon span:first-child {
  width: 60%;
  align-self: flex-start;
}

.nav-icon span:nth-child(2) {
  width: 90%; 
}

.nav-icon span:last-child {
  width: 60%;
  align-self: flex-end;
}

.nav-icon.open span:nth-child(2) {
  opacity: 0;
  transform: scaleX(0);
}

.nav-icon.open span:first-child {
  width: 100%;
  transform: translateY(8px) rotate(45deg);
}

.nav-icon.open span:last-child {
  width: 100%;
  transform: translateY(-8px) rotate(-45deg);
}

@keyframes attention-pulse {
  0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(34, 211, 238, 0); }
  5% { transform: scale(1.05) rotate(2deg); box-shadow: 0 0 15px 2px rgba(34, 211, 238, 0.2); }
  10% { transform: scale(1.05) rotate(-2deg); }
  15% { transform: scale(1.05) rotate(0deg); }
  20% { transform: scale(1); box-shadow: 0 0 0 0 rgba(34, 211, 238, 0); }
}

/* Blue glow on menu button when drawer is open */

.animate-attention {
  animation: attention-pulse 6s infinite;
}
</style>

<script>
  // Glow animation on page load
  document.querySelector(".logo-rom")?.classList.add("glow-active");
  document.querySelector(".logo-divider")?.classList.add("glow-active");
  document.querySelector(".logo-text")?.classList.add("glow-active");

  const menuBtn = document.getElementById("menuBtn");
  const menuIcon = document.getElementById("menuIcon");
  const logoRom = document.querySelector(".logo-rom");
  const logoDivider = document.querySelector(".logo-divider");
  const logoText = document.querySelector(".logo-text");

  function replayLogoGlow() {
    [logoRom, logoDivider, logoText].forEach(el => {
      if (!el) return;
      el.classList.remove("glow-active");
      void (el as HTMLElement).offsetWidth;
      el.classList.add("glow-active");
    });
  }

  if (menuBtn && menuIcon) {
    menuBtn.addEventListener("click", () => {
      window.dispatchEvent(new CustomEvent("toggleMenu"));
    });

    window.addEventListener("menuStateChanged", ((e: CustomEvent) => {
      const isOpen = e.detail.isOpen;
      menuIcon.classList.toggle("open", isOpen);
      menuBtn.classList.toggle("menu-open", isOpen);
      if (isOpen) {
        menuBtn.classList.remove("animate-attention");
        replayLogoGlow();
      } else {
        menuBtn.classList.add("animate-attention");
      }
    }) as EventListener);
  }
</script>