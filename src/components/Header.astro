---
// src/components/Header.astro
---

<header class="header-dark font-['Poppins']">
  <div class="header-content">
    <div class="logo-wrapper">
      <a href="/" class="logo">
        <div class="logo-rom">ROM<span class="text-cyan-400">.</span></div>
        <div class="logo-divider"></div>
        <div class="logo-text">
          <span>BUSINESS</span>
          <span>PSYCHOLOGY</span>
        </div>
      </a>

      <button
        class="menu-btn animate-attention"
        id="menuBtn"
        aria-label="Open menu"
      >
        <div class="nav-icon" id="menuIcon">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </button>
    </div>
  </div>
</header>

<style>
.header-dark {
  background: #0f172a;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 400; 
  width: 100%;
  transition: background 0.4s ease;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.header-content {
  max-width: 896px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  align-items: center;
  height: 90px;
}

.logo-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  /* שינוי: הצמדה לצד שמאל (או ימין ב-LTR) במקום פיזור לקצוות */
  justify-content: flex-start; 
  gap: 32px; /* רווח קבוע ומרשים בין הלוגו להמבורגר */
}

.logo {
  display: flex;
  align-items: center;
  gap: 16px;
  text-decoration: none;
}

.logo-rom {
  font-size: clamp(38px, 9vw, 52px); 
  font-weight: 900;
  line-height: 1;
  letter-spacing: -2px;
  color: white;
}

.logo-text {
  display: flex;
  flex-direction: column;
  gap: 0px; 
}

.logo-text span {
  font-size: clamp(12px, 2.8vw, 15px);
  font-weight: 400; 
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 2px;
  line-height: 1.2;
}

.logo-divider {
  width: 1px;
  height: 48px;
  background: rgba(255, 255, 255, 0.15);
}

.text-cyan-400 { color: #22d3ee; }

.menu-btn {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  cursor: pointer;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.nav-icon {
  width: 26px;
  height: 18px;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* הסרנו את ה-align-items הגלובלי כי כל קו מיושר אחרת */
}

.nav-icon span {
  display: block;
  height: 2px;
  border-radius: 2px;
  transition: all 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6);
}

/* קו עליון - קטן (60%) ומיושר לשמאל */
.nav-icon span:first-child {
  width: 60%;
  align-self: flex-start;
  background-color: white;
}

/* קו אמצעי - שלם (100%) וצבעוני */
.nav-icon span:nth-child(2) {
  width: 100%;
  background-color: #22d3ee; /* צבע Cyan של המותג */
}

/* קו תחתון - קטן (60%) ומיושר לימין */
.nav-icon span:last-child {
  width: 60%;
  align-self: flex-end;
  background-color: white;
}

/* אנימציית X שתתחבר למרכז */
.nav-icon.open span:nth-child(2) {
  opacity: 0;
  transform: scaleX(0);
}

.nav-icon.open span:first-child {
  width: 100%;
  transform: translateY(8px) rotate(45deg);
}

.nav-icon.open span:last-child {
  width: 100%;
  transform: translateY(-8px) rotate(-45deg);
}

@keyframes attention-pulse {
  0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(34, 211, 238, 0); }
  5% { transform: scale(1.05) rotate(2deg); box-shadow: 0 0 15px 2px rgba(34, 211, 238, 0.2); }
  10% { transform: scale(1.05) rotate(-2deg); }
  15% { transform: scale(1.05) rotate(0deg); }
  20% { transform: scale(1); box-shadow: 0 0 0 0 rgba(34, 211, 238, 0); }
}

.animate-attention {
  animation: attention-pulse 6s infinite;
}
</style>

<script>
  const menuBtn = document.getElementById("menuBtn");
  const menuIcon = document.getElementById("menuIcon");

  if (menuBtn && menuIcon) {
    menuBtn.addEventListener("click", () => {
      window.dispatchEvent(new CustomEvent("toggleMenu"));
    });

    window.addEventListener("menuStateChanged", ((e: CustomEvent) => {
      menuIcon.classList.toggle("open", e.detail.isOpen);
      if (e.detail.isOpen) {
        menuBtn.classList.remove("animate-attention");
      } else {
        menuBtn.classList.add("animate-attention");
      }
    }) as EventListener);
  }
</script>