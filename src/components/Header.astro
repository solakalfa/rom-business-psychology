---
// src/components/Header.astro
---

<header class="header-dark font-['Poppins']">
  <div class="header-content">
    <div class="logo-wrapper">
      <a href="/" class="logo">
        <div class="logo-rom">ROM<span class="text-cyan-400">.</span></div>
        <div class="logo-divider"></div>
        <div class="logo-text">
          <span>BUSINESS</span>
          <span>PSYCHOLOGY</span>
        </div>
      </a>

      <button
        class="menu-btn animate-attention"
        id="menuBtn"
        aria-label="Open menu"
      >
        <div class="nav-icon" id="menuIcon">
          <span></span>
          <span></span>
        </div>
      </button>
    </div>
  </div>
</header>

<style>
  .header-dark {
    background: #0f172a;
    position: sticky;
    top: 0;
    z-index: 250;
    width: 100%;
    transition: background 0.4s ease;
  }

  .header-content {
    max-width: 896px;
    margin: 0 auto;
    padding: 0 20px; /* תיקון: מגן על המבורגר מהקצה במובייל */
    display: flex;
    align-items: center;
    height: 90px;
  }

  .logo-wrapper {
    display: flex;
    align-items: center;
    width: 100%;
    justify-content: space-between; /* דוחף את ההמבורגר לקצה השני */
    gap: 12px; 
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 12px; /* תיקון: צמצום המרחק מהקו המפריד */
    text-decoration: none;
  }

  .logo-rom {
    font-size: clamp(32px, 8vw, 52px); /* לוגו גמיש שלא דוחף את ההמבורגר */
    font-weight: 900;
    line-height: 1;
    letter-spacing: -2px;
    color: white;
  }

  .text-cyan-400 {
    color: #22d3ee;
  }

  .logo-divider {
    width: 1px;
    height: 40px;
    background: rgba(255, 255, 255, 0.15);
  }

  .logo-text {
    display: flex;
    flex-direction: column;
    gap: 1px;
  }

  .logo-text span {
    font-size: clamp(9px, 2vw, 11px);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 2px;
    line-height: 1.4;
  }

  /* כפתור ההמבורגר החדשני */
  .menu-btn {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    cursor: pointer;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    flex-shrink: 0; /* מונע מהכפתור להתכווץ */
  }

  .nav-icon {
    width: 20px;
    height: 14px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .nav-icon span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: white;
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-icon span:last-child {
    width: 65%;
    align-self: flex-end;
  }

  .nav-icon.open span:first-child {
    transform: translateY(6px) rotate(45deg);
  }

  .nav-icon.open span:last-child {
    transform: translateY(-6px) rotate(-45deg);
    width: 100%;
  }

  @keyframes attention-pulse {
    0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(34, 211, 238, 0); }
    5% { transform: scale(1.05) rotate(2deg); box-shadow: 0 0 15px 2px rgba(34, 211, 238, 0.2); }
    10% { transform: scale(1.05) rotate(-2deg); }
    15% { transform: scale(1.05) rotate(0deg); }
    20% { transform: scale(1); box-shadow: 0 0 0 0 rgba(34, 211, 238, 0); }
  }

  .animate-attention {
    animation: attention-pulse 6s infinite;
  }
</style>

<script>
  const menuBtn = document.getElementById("menuBtn");
  const menuIcon = document.getElementById("menuIcon");

  if (menuBtn && menuIcon) {
    menuBtn.addEventListener("click", () => {
      window.dispatchEvent(new CustomEvent("toggleMenu"));
    });

    window.addEventListener("menuStateChanged", ((e: CustomEvent) => {
      menuIcon.classList.toggle("open", e.detail.isOpen);
      if (e.detail.isOpen) {
        menuBtn.classList.remove("animate-attention");
      } else {
        menuBtn.classList.add("animate-attention");
      }
    }) as EventListener);
  }
</script>