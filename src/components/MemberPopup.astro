---
const { name, role, image, bio, email, open, onClose } = Astro.props;
---

{open && (
  <div class="fixed inset-0 bg-black/60 flex items-center justify-center z-50">
    <div class="bg-white w-full max-w-2xl p-8 rounded-lg relative shadow-xl overflow-y-auto max-h-[90vh]">

      <!-- Close button -->
      <button class="absolute top-4 right-4 text-gray-600 hover:text-black"
              onclick={onClose}>âœ•</button>

      <!-- Header -->
      <div class="flex flex-col md:flex-row gap-6">
        <img src={image} alt={name}
          class="w-40 h-40 object-cover rounded-lg shadow" />

        <div>
          <h2 class="text-2xl font-bold mb-1">{name}</h2>
          <p class="text-gray-600 mb-4">{role}</p>
        </div>
      </div>

      <!-- Bio text -->
      <div class="mt-6 text-gray-700 leading-relaxed">
        {bio}
      </div>

      <!-- Contact -->
      {email && (
        <p class="mt-6 text-indigo-600 font-medium">
          Contact: <a href={`mailto:${email}`} class="underline">{email}</a>
        </p>
      )}
    </div>
  </div>
)}
