---
import Layout from "../layouts/Layout.astro";
---


<Layout>

<section class="py-20 bg-white">
  <div class="container mx-auto px-6">

    <h2 class="text-3xl md:text-5xl text-center font-adamina mb-16">
      Meet The Team
    </h2>

    <ul class="grid md:grid-cols-2 gap-y-16 gap-x-10">

      <!-- MEMBER 1 -->
      <li class="relative group">
        <img
          src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?w=1200"
          alt="Sofia Lin"
          class="block w-full h-auto rounded-md object-cover"
        />

        <div class="flex items-center justify-between gap-2 mt-4 text-black">
          <h3 class="text-2xl font-semibold">Sofia Lin</h3>
          <span class="text-sm opacity-70">Founder & CEO</span>
        </div>
      </li>

      <!-- MEMBER 2 -->
      <li class="relative group">
        <img
          src="https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?w=1200"
          alt="James Carter"
          class="block w-full h-auto rounded-md object-cover"
        />

        <div class="flex items-center justify-between gap-2 mt-4 text-black">
          <h3 class="text-2xl font-semibold">James Carter</h3>
          <span class="text-sm opacity-70">Finance Manager</span>
        </div>
      </li>

      <!-- MEMBER 3 -->
      <li class="relative group">
        <img
          src="https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?w=1200"
          alt="Emily Worlds"
          class="block w-full h-auto rounded-md object-cover"
        />

        <div class="flex items-center justify-between gap-2 mt-4 text-black">
          <h3 class="text-2xl font-semibold">Emily Worlds</h3>
          <span class="text-sm opacity-70">Chief Operations Officer</span>
        </div>
      </li>

      <!-- MEMBER 4 -->
      <li class="relative group">
        <img
          src="https://images.unsplash.com/photo-1544723795-3fb6469f5b39?w=1200"
          alt="Sofia Lin 2"
          class="block w-full h-auto rounded-md object-cover"
        />

        <div class="flex items-center justify-between gap-2 mt-4 text-black">
          <h3 class="text-2xl font-semibold">Sofia Lin</h3>
          <span class="text-sm opacity-70">Operations Lead</span>
        </div>
      </li>

    </ul>
  </div>
</section>

</Layout>
